---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";

const filteredTags: string[] = tags?.filter((t: string) => t.trim()) || [];
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={208}
            height={117}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] w-[288px] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="pt-1 text-1xl">{desc}</p>
        {
          filteredTags.length > 0 && (
            <div class="card-actions gap-3 mt-5 flex flex-row flex-wrap">
              {filteredTags.map((tag) => (
                <div class="badge badge-outline">{tag}</div>
              ))}
            </div>
          )
        }
      </div>
    </div>
  </a>
</div>
